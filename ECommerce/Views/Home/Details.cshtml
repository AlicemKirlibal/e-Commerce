@using ECommerce.Entity;
@model Product

@{
    ViewBag.Title = "About";
}

<link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.8.2/css/all.css" integrity="sha384-oS3vJWv+0UjzBfQzYUhtDYW+Pj2yciDJxpsK1OYPAYjqT085Qq/1cq5FLXAZQ7Ay" crossorigin="anonymous">
<link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css" integrity="sha384-GJzZqFGwb1QTTN6wy59ffF1BuGJpLSa9DkKMp0DgiMDm4iYMj70gZWKYbI706tWS" crossorigin="anonymous">
<style>
    .row{
        margin-bottom:5px;
    }
</style>

<div class="conteiner pb-5">
    <div class="row">

        <div class="col-md-5">
            <img src="~/Upload/@Model.Image" />
        </div>
        <div class="col-md-6">
            <div class="row">
                <div class="col-md-12">
                    <h1>@Model.Name</h1>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    @if (Model.IsApproved)
                    {
                        <span class="badge badge-primary"><b>Stok Adeti:</b> @Model.Stock</span>
                    }
                    else
                    {
                        <span class="badge badge-danger"><b>Stok Adeti:</b> Stokta Yok</span>
                    }

                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <div>@Model.Description</div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-4">
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <i class="fa fa-star" aria-hidden="true"></i>
                    <span class="badge badge-success">85</span>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12">
                    <h4><i class="fa fa-try" aria-hidden="true"></i>@Model.Price</h4>
                </div>
            </div>

            @using (Html.BeginForm("AddToCart","Cart"))
            {
                      @Html.HiddenFor(i=>i.Id)
                        <button type="submit" class="btn btn-success">
                        <i class="fa fa-cart-plus" aria-hidden="true"></i>
                        Sepete Ekle
                        </button>
                   
            }





        </div>
    </div>
</div>





