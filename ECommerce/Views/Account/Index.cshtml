@model IEnumerable< ECommerce.Models.UserOrderModel>
@{
    ViewBag.Title = "Index";
}

    <div class="conteiner">
        <div class="row">
            <div class="col-md-12">
                <h2>Sipariş Bilgileriniz</h2>
                <hr />

                <table class="table table-bordered table-striped">
                    <thead>
                       <tr>
                           <th>Order Number</th>
                           <th>Order Date</th>
                           <th>Total</th>
                           <th></th>
                       </tr>
                    </thead>

                    <tbody>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.OrderNumber</td>
                                <td>@item.OrderDate.ToShortDateString()</td>
                                <td>@item.Total</td>
                                <td>@item.OrderState</td>

                            </tr>
                        }

                    </tbody>
                </table>

            </div>
        </div>
    </div>

